<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.adups.fota.activity.FileBrowserActivity">

    <TextView
        android:id="@+id/option_file_select_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dip"
        android:singleLine="true"
        android:textColor="@color/black_text_color"
        android:textSize="@dimen/default_content_size" />

    <ListView
        android:id="@+id/file_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/horizontal_line_color"
        android:dividerHeight="1px" />

</LinearLayout>
