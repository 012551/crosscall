<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ten_dp"
        android:background="@drawable/options_selector"
        android:button="@drawable/upgrade_checkbox_selector" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/options_selector"
            android:text="@string/upgrade_agreement"
            android:textColor="@color/setting_small_text_color"
            android:textSize="@dimen/tips_title_size" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/three_dp"
                android:text="@string/upgrade_agreement_content"
                android:textColor="@color/setting_small_text_color"
                android:textSize="@dimen/twelve_sp"
                android:visibility="gone" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
