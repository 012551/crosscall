<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="cycle">
        <attr name="sweep_start" format="integer" />
        <attr name="stroke_width" format="dimension" />

        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_margin_bottom" format="dimension" />

        <attr name="usable_text_size" format="dimension" />
        <attr name="usable_margin_top" format="dimension" />

        <attr name="desc" format="string" />
        <attr name="desc_text_size" format="dimension" />
        <attr name="desc_margin_top" format="dimension" />

        <attr name="force_color" format="color" />
        <attr name="normal_color" format="color" />
        <attr name="text_font_color" format="color" />
        <attr name="bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="view">
        <attr name="substance" format="string" />
        <attr name="icon" format="reference" />
        <attr name="content" format="string" />
        <attr name="title" format="string" />
        <attr name="showBox" format="boolean" />
        <attr name="showSetting" format="boolean" />
    </declare-styleable>

</resources>